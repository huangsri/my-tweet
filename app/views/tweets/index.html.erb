<h1>IndexPage</h1>
<%= link_to "Add", new_tweet_path %>
<hr>
<% @tweets.each do |tweet| %>
  <h6><%= tweet.author %></h6>
  <p><%= tweet.content %></p>
  <% if user_signed_in? %>
    <%= link_to "Edit", edit_tweet_path(tweet) %>
    <%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
