<!DOCTYPE html>
<html>
  <head>
    <title>MyTweet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav>
      <%= link_to tweets_path, class: "nav__logo" do %>
        <%= fa_icon "twitter 2x", class: "color-primary" %>
      <% end %>
      <% if current_user %>
        <p class="nav__user">Welcome back, <strong><%= current_user.name %></strong></p>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "nav__links" %>
      <% else %>
        <%= link_to 'Register', new_user_registration_path, class: "nav__links" %>
        <%= link_to 'Login', new_user_session_path, class: "nav__links" %>
      <% end %>
    </nav>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="content">
        <div class="box left">Coming Soon...</div>
        <div class="box center">
          <%= yield %>
        </div>
        <div class="box right">Coming Soon...</div>
      </div>
    </div>
  </body>
</html>
